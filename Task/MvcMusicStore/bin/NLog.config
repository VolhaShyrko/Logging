<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!--<variable name="myvar" value="myvalue"/>-->
  <variable name="myvar" value="${level} | ${longdate} | ${message} | ${logger}"/>

  <targets>
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
                layout="${longdate} ${uppercase:${level}} ${message}" />
    <target xsi:type="File" name="csv" fileName="${basedir}/logs/log.csv">
      <layout xsi:type="CSVLayout">
        <column name="level" layout="${level}" />
        <column name="time" layout="${longdate}" />
        <column name="message" layout="${message}" />
      </layout>
    </target>
  </targets>
 
  <rules>
    <logger name="*" levels="Debug,Error,Info" writeTo="csv" />
    <logger name="*" levels="Debug,Error,Info" writeTo="f" />

    <!--<logger name="*" minlevel="Debug" writeTo="f" />-->
  </rules>
</nlog>

<!-- Volha: to disable logging pass <nlog globalThreshold="Off" /> -->

